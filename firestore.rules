rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Super Admin: Can do EVERYTHING (settings, permissions, delete, etc.)
    // Super Admin: Can do EVERYTHING (settings, permissions, delete, etc.)
    function isSuperAdmin() {
      return isAuthenticated() && 
        (
          (request.auth.token.email in ['mail2adiexp@gmail.com', 'rfnindrajit@gmail.com']) ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin' ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'administrator'
        );
    }

    // Admin: Can do everything EXCEPT Settings (includes Super Admin and State Admin)
    function isAdmin() {
      return isAuthenticated() && 
        (
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || 
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'state_admin' || 
          isSuperAdmin()
        );
    }

    // --- Users Collection & Permissions ---
    // Super Admin: Full control (manage roles/permissions).
    // Admin: Can read/write (e.g. block users), but broadly allowed as per "sab kuch".
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin() || isAuthenticated(); 
      allow write: if isOwner(userId) || isAdmin(); 
      
      // Subcollections
      match /addresses/{addressId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // --- Products & Categories (Catalog) ---
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin() || (isAuthenticated() && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'seller')); 
    }
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /service_categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Featured Sections ---
    match /featured_sections/{sectionId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Gifts ---
    match /gifts/{giftId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Stores ---
    match /stores/{storeId} {
      allow read: if true;
      // Admins can manage all stores. 
      // Store Managers can update their assigned store.
      allow write: if isAdmin() || (isAuthenticated() && request.auth.uid == resource.data.managerId);
    }

    // --- App Settings (Fees, UPI, etc.) ---
    // RESTRICTED: Only Super Admin can write/change settings.
    match /app_settings/{document} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    // --- Payouts ---
    match /payouts/{payoutId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow update: if isAdmin(); 
    }

    // --- Contact Messages ---
    match /contact_messages/{messageId} {
      allow create: if true; 
      allow read, write: if isAdmin();
    }
    
    // --- Delivery Partners (Profiles) ---
    match /delivery_partners/{partnerId} {
        allow read: if isAuthenticated(); 
        allow write: if isAdmin() || isOwner(partnerId);
    }

    // --- Transactions (History) ---
    match /transactions/{transactionId} {
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated(); 
      allow write: if isAdmin();
    }

    // --- Orders ---
    match /orders/{orderId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        isAdmin() || 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'seller') || 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'store_manager') ||
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'delivery_partner')
      ); 
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        isAdmin() || 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'seller') || 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'store_manager') ||
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'delivery_partner')
      );
    }

    // --- Services ---
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin() || (isAuthenticated() && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'service_provider'
      )); 
    }
    
    // --- Partner Requests ---
    match /partner_requests/{requestId} {
      allow create: if true;
      allow read, write: if isAdmin() || (isAuthenticated() && (
        request.auth.uid == resource.data.userId || 
        resource.data.email == request.auth.token.email
      ));
    }

    // --- Bookings ---
    match /bookings/{bookingId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated() && (resource.data.customerId == request.auth.uid || resource.data.providerId == request.auth.uid || isAdmin());
      allow update: if isAuthenticated() && (
        resource.data.customerId == request.auth.uid ||
        resource.data.providerId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // --- Notifications ---
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.toUserId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.toUserId == request.auth.uid;
      allow create: if isAuthenticated();
      allow delete: if isAdmin(); 
    }

    // --- Default Fallback ---
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
